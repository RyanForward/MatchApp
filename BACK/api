const express = require('express');
const axios = require('axios');
const bodyParser = require('body-parser');

const app = express();
app.use(bodyParser.json());

// Substitua pela sua API Key do Google
const GOOGLE_API_KEY = 'YOUR_API_KEY';

// Rota para pegar a localização via Geolocalização do Google
app.post('/geolocalizacao', async (req, res) => {
    const { homeMobileCountryCode, homeMobileNetworkCode, radioType, carrier } = req.body;

    try {
        const response = await axios.post(`https://www.googleapis.com/geolocation/v1/geolocate?key=${GOOGLE_API_KEY}`, {
            homeMobileCountryCode,
            homeMobileNetworkCode,
            radioType,
            carrier,
            considerIp: true // Considerar o IP da requisição
        });

        // Resposta da API do Google
        res.json(response.data);
    } catch (error) {
        console.error(error);
        res.status(500).json({ error: 'Erro ao buscar localização' });
    }
});

// Inicia o servidor
const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
    console.log(`Servidor rodando na porta ${PORT}`);
});
